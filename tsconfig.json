{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "newLine": "lf",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2020"
  },
}
